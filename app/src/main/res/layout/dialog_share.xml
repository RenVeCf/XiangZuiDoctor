<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingEnd="@dimen/x50"
    android:paddingStart="@dimen/x50"
    android:paddingTop="@dimen/y50">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="分享到"
        android:layout_gravity="start"
        android:textColor="@color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y30"
        android:layout_marginBottom="@dimen/y50"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_wechat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/x10"
            android:drawableTop="@drawable/ic_wechat"
            android:gravity="center_horizontal"
            android:text="微信"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_moments"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/x10"
            android:drawableTop="@drawable/ic_moments"
            android:gravity="center_horizontal"
            android:text="朋友圈"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_qq"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/x10"
            android:drawableTop="@drawable/ic_qq"
            android:gravity="center_horizontal"
            android:text="QQ"
            android:textColor="@color/black" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/bg_fine_line" />

    <Button
        android:id="@+id/bt_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:paddingBottom="@dimen/y30"
        android:paddingTop="@dimen/y30"
        android:text="取消"
        android:textColor="@color/tx_bottom_navigation_select"
        android:textSize="16sp" />
</LinearLayout>
